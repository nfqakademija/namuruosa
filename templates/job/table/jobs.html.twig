

<table class="table">
    <tr>
        <th>Pavadinimas</th>
        <th>Aprašymas</th>
        <th>Kategorija 1</th>
        <th>Kategorija 2</th>
        <th>Kaina</th>
        <th>Redaguoti</th>
    </tr>
    {% for job in jobs %}
        <tr>
            <td>{{ job.title }}</td>
            <td>{{ job.description }}</td>
            <td>{{ job.category1 }}</td>
            <td>{{ job.category2 }}</td>
            <td>{{ job.budget }}</td>
            <td>
                <button class="btn btn-link">Keisti</button>
                <button class="btn btn-sm btn-danger">Šalinti</button>
            </td>
        </tr>

    {% endfor %}
</table>