<div class="job-odd-even">
    <h3 class="text-muted">Mano darbas: <span class="text-white"> <b>{{ matchesByJob[0].title }}
    </b></span></h3>
    <div class="row">
        {% set imageNo = 38 %}
        {% for service in matchesByJob[1] %}
            <div class="col-md-6 col-lg-4 col-xl-3 mt-3">
                <div class="card text-center">
                    <div style="position: relative">
                         <span class="text-warning text-right text-price">{{ service.pricePerHour }} <i
                                     class="fa fa-euro-sign fa-xs"></i> / val.
                            </span>
                        <img class="card-img-top card-half-height"
                             src="https://source.unsplash.com/collection/1390{{ imageNo }}/300x100"
                             alt="Card image cap">
                    </div>

                    {% set imageNo = imageNo - 1 %}
                    <div class="card-body">
                        <h5 class="card-title" style="height: 50px;">{{ service.title }}</h5>
                        <hr>
                        <h6 style="height: 80px; display: -webkit-box;
-webkit-line-clamp: 4;
-webkit-box-orient: vertical;
overflow: hidden;
text-overflow: ellipsis;">{{ service.description }}</h6>
                        <div class="mb-3 text-left">
                            {% for cat in service.category %}
                                <span class="badge badge-warning">{{ cat.name }}</span>
                            {% endfor %}
                        </div>
                        <iframe src="https://maps.google.com/maps?q={{ service.lat }},{{ service.lon }}&hl=en;z=14&amp;output=embed"
                                width="100%" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
                        <div class="align-content-center mt-3">
                            <a href="{{ path('match_job_create', { 'callerJobId': matchesByJob[0].id, 'responderServiceId': service.id }) }}">
                                <button class="btn btn-outline-success font-weight-bold px-3">Siūlyti darbą</button>
                            </a>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <div class="row">
                            <div class="col px-1">
                                <a href=""><i class="fas fa-route"></i>
                                    <small> {{ service.distance }} km</small>
                                </a>
                            </div>
                            <div class="col px-1">
                                <a href="{{ path('otherUserProfile', { 'userId': service.userId.id}) }}"><i
                                            class="fa fa-user"></i> {{ service.userId.username }}</a>
                            </div>
                            <div class="col px-1">
                                <a href="tel:+123456789"><i class="fas fa-phone"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>