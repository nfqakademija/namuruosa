<h3 class="text-warning">Darbas: <span class="text-success"> {{ matchesByJob[0].title }}
    </span></h3>
<table class="table table-lg table-hover mb-5">

    {% for service in matchesByJob[1][0] %}
        <tr>
            <td class="py-4" style="width: 70%">
                <h4 class="text-info">{{ service.title }}</h4>
                <div class="mb-1">{{ service.description }}</div>
                <div class="text-muted small pb-2">
                    <a href="#"><i class="fa fa-user"></i> {{ service.userId.username }}</a>
                    <i class="fa fa-clock ml-3"></i> Paskelbta {{ service.updatedAt|date('y.m.d') }}
                    <i class="fa fa-map-marker-alt ml-3"></i> Atstumas {{ service.coordinateX }} km
                    <div class="d-inline-block  ml-3">
                        <a href=""><span class="badge badge-success">Valymas</span></a>
                        <span class="badge badge-warning">{{ service.transport }}</span>
                        <span class="badge badge-primary">{{ service.education }}</span>
                        <span class="badge badge-danger">{{ service.cleaning }}</span>
                    </div>
                </div>
            </td>
            <td class="text-right">
               <h4 class="text-info text-right">{{ matchesByJob[0].budget }} <i class="fa fa-euro-sign fa-xs"></i> / val.</h4>
                <a class="align-self-end" href="{{ path('matchShow',
                    {'responderServiceId': service.id, 'callerServiceId':  matchesByJob[0].id }) }}">
                    <button class="btn btn-outline-info">Peržiūrėti</button>
                </a>
            </td>
        </tr>

    {% endfor %}
</table>
