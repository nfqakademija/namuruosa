<h5 class="text-muted">Mano paslauga: <span class="text-danger"><b> {{ matchesByService[0].title }}</b></span></h5>
<table class="table table-lg table-hover mb-5">

    {% for job in matchesByService[1] %}
        <tr>
            <td class="py-4" style="width: 70%">
                <h4 class="text-info">{{ job[0].title }}</h4>
                <div class="mb-1">{{ job[0].description }}</div>
                <div class="text-muted small pb-2">
                    <a href="#"><i class="fa fa-user"></i> {{ job[0].userId.username }}</a>
                    <i class="fa fa-clock ml-3"></i> Paskelbta {{ job[0].updatedAt|date('y.m.d') }}
                    <i class="fa fa-map-marker-alt ml-3"></i> Atstumas {{ job['distance'] }} km
                    <div class="d-inline-block  ml-3">
                        {%  for cat in job[0].category %}
                        <span class="badge badge-warning">{{ cat.name }}</span>
                        {%  endfor %}
                    </div>
                </div>
            </td>
            <td class="text-right">
               <h4 class="text-info text-right">{{ job[0].budget }} <i class="fa fa-euro-sign fa-xs"></i> / val.</h4>
                <a class="align-self-end" href="{{ path('match_service_create',
                    {'callerServiceId':  matchesByService[0].id, 'responderJobId': job[0].id }) }}">
                    <button class="btn btn-outline-info">Sūlyti paslaugą</button>
                </a>
            </td>
        </tr>

    {% endfor %}
</table>
