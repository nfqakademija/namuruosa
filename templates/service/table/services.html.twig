<div class="pot-matches-wrapper container">
    {% include 'layout/messages.html.twig' %}
    <div class="table-responsive">
        <table class="table">
            <tr class="stucco">
                <th>Pavadinimas</th>
                <th>Aprašymas</th>
                <th>Kategorijos</th>
                <th style="min-width: 80px">Kaina</th>
                <th>Redaguoti</th>
            </tr>
            {% for service in services %}
                <tr class="pot-match-odd-even">
                    <td>{{ service.title }}</td>
                    <td>{{ service.description }}</td>
                    <td>
                        {% for cat in service.category %}
                            {{ cat.name }},
                        {% endfor %}
                    </td>
                    <td><i class="fas fa-euro-sign fa-sm"></i> {{ service.pricePerHour }} / h </td>
                    <td>
                        <a href="{{ path('serviceEdit', {'id': service.id }) }}">
                            <div class="color-cancel btn-action"><i class="fas fa-pencil-alt"></i> Keisti</div>
                        </a>
                        <a href="{{ path( 'serviceDelete' , { 'serviceId' : service.id } ) }}">
                            <div class="text-danger btn-action"><i class="fas fa-trash"></i> Šalinti</div>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="mt-3">
        {{ knp_pagination_render(services) }}
    </div>
</div>