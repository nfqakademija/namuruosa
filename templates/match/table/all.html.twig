<h3 class="text-info">Mano užklausos</h3>

<table class="table mb-5">
    <tr>
        <th style="width: 10%">Data</th>
        <th style="width: 25%">Mano paklausimas</th>
        <th style="width: 30%">Paslauga</th>
        <th style="width: 15%">Tiekėjas</th>
        <th style="width: 10%">Statusas</th>
        <th></th>
    </tr>
    {% for match in myCalls %}
        <tr>
            <td >{{ match.createdAt|date('Y.m.d') }}</td>
            <td >{{ match.callerServiceId.description }}</td>
            <td >{{ match.responderServiceId.title }}</td>
            <td>{{ match.responderId }}</td>
            <td >
                {%  if match.acceptedAt %}
                    Patvirtinta {{ match.acceptedAt|date('Y.m.d') }}
                {% elseif match.rejectedAt %}
                    Atmesta {{ match.rejectedAt|date('Y.m.d') }}
                {% elseif match.cancelledAt %}
                    Atšaukta {{ match.cancelledAt|date('Y.m.d') }}
                {% else %}
                    Neatsakė
                {% endif %}
            </td>
            <td >
                <a href="#"><button class="btn btn-sm btn-danger">Atšaukti</button></a>
            </td>
        </tr>
    {% endfor %}
</table>


<h3 class="text-info">Manęs klausia</h3>

