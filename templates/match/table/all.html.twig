    <tr>
        <th style="width: 10%">Data</th>
        <th style="width: 25%">Mano pasiūlymas</th>
        <th style="width: 30%">Užklausa</th>
        <th style="width: 15%">Klausėjas</th>
        <th style="width: 10%">Statusas</th>
        <th></th>
    </tr>
    {% for call in callsToMe %}
        <tr>
            <td >{{ call.createdAt|date('Y.m.d') }}</td>
            <td >{{ call.responderServiceId.title }}</td>
            <td >{{ call.callerServiceId.description }}</td>
            <td>{{ call.callerId }}</td>
            <td >
                {%  if call.acceptedAt %}
                    Patvirtinta {{ match.acceptedAt|date('Y.m.d') }}
                {% elseif call.rejectedAt %}
                    Atmesta {{ match.rejectedAt|date('Y.m.d') }}
                {% elseif call.cancelledAt %}
                    Atšaukta {{ match.cancelledAt|date('Y.m.d') }}
                {% else %}
                    Neatsakyta
                {% endif %}
            </td>
            <td class="text-center">
                <a href="#" ><button class="btn btn-sm btn-success mb-2">Sutikti</button></a>
