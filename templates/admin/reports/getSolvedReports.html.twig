<div>
    <a class="text-primary float-left" href="{{ path('admin_reports_new') }}">Nauji skundai</a>
    <a class="text-secondary float-right" href="{{ path('admin_reports_solved') }}">Įspręsti skundai</a>
</div>
<h3 class="text-center">Nusiskundimų sąrašas</h3>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Sukūrė</th>
            <th>Skirta</th>
            <th>Skundas</th>
            <th>Sukurta</th>
            <th>Išspręsta</th>
          </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.id }}</td>
                <td><a href="{{ path('otherUserProfile', {'userId': report.reporter_user_id}) }}">{{ report.reporter_username }}</a></td>
                <td><a href="{{ path('otherUserProfile', {'userId': report.reported_user_id}) }}">{{ report.reported_username }}</a></td>
                <td>{{ report.report }}</td>
                <td>{{ report.created_at|date('Y-m-d H:m') }}</td>
                <td>{{ report.solved_at|date('Y-m-d H:m') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>