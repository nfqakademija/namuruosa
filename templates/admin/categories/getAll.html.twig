<h3 class="text-center">Kategorijų sąrašas</h3>
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Pavadinimas</th>
            <th>Paslaugų kiekis</th>
            <th>Darbų kiekis</th>
            <th>Keisti</th>
            <th>Ištrinti</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.service_count }}</td>
                <td>{{ category.job_count }}</td>
                <td>Keisti</td>
                <td>
                    <a onclick="return confirm('Ar tikrai norite ištrinti? Tai gali pakenkti kitiems įrašams'); " class="text-danger" href="{{ path('admin_category_delete', {'id': category.id}) }}">
                        Ištrinti
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>